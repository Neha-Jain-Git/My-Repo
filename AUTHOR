name: Merge DDIQAGH to DDIUATGH

on:
  workflow_dispatch:

permissions:
  contents: write   # needed for pushing changes

jobs:
  merge:
    runs-on: uhg-runner-m   # self-hosted runner
    steps:
      - name: Checkout target branch (DDIUATGH)
        uses: actions/checkout@v4
        with:
          ref: DDIUATGH
          token: ${{ secrets.PAT_TOKEN }}
          fetch-depth: 0   # important to get full history

      - name: Configure Git
        run: |
          git config user.email "maltss_tech@optum.com"
          git config user.name "maltssdeploy"

      - name: Fetch source branch (DDIQAGH)
        run: |
          git fetch origin DDIQAGH

      - name: Merge DDIQAGH into DDIUATGH
        run: |
          git merge origin/DDIQAGH --no-edit || exit 1
          git push origin DDIUATGH