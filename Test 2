name: Merge DDIQAGH to DDIUATGH

on:
  workflow_dispatch:   # Run manually from GitHub Actions tab

permissions:
  contents: write

jobs:
  merge:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0   # fetch all branches and history

      - name: Configure Git
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"

      - name: Fetch branches
        run: |
          git fetch origin DDIQAGH
          git fetch origin DDIUATGH

      - name: Checkout target branch (DDIUATGH)
        run: git checkout DDIUATGH

      - name: Merge source branch (DDIQAGH -> DDIUATGH)
        run: |
          set -e
          git merge origin/DDIQAGH --no-edit
          git push origin DDIUATGH